@{
    Layout = null;
}
@model ProjectMajor.Models.Student

@{ ViewData["Title"] = "Login Page"; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Untree.co">
    <link rel="shortcut icon" href="favicon.png">

    <meta name="description" content="" />
    <meta name="keywords" content="bootstrap, bootstrap5" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/acsses/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/acsses/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/acsses/css/tiny-slider.css">
    <link rel="stylesheet" href="~/acsses/css/aos.css">
    <link rel="stylesheet" href="~/acsses/css/glightbox.min.css">
    <link rel="stylesheet" href="~/acsses/css/style.css">

    <link rel="stylesheet" href="css/flatpickr.min.css">


    <title>Choose Major</title>
</head>
<body>
                        

<style>
    section.vh-100 {
        height: 100vh;
    }
    .h-custom {
        height: calc(100% - 30px);
    }
    form {
        margin-top: 2rem;
    }
    h1.h2 {
        font-size: 2rem;
        font-weight: bold;
    }
    button.btn-primary {
        border-width: 2px;
        padding-left: 2.5rem;
        padding-right: 2.5rem;
    }
</style>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Login">
                    <!-- Email input -->
                    <h1 class="h2 mt-4 text-center ">Login to your account</h1>
                    <span class="text-danger">@ViewBag.ERROR</span>
                    <div class="form-outline mt-2 mb-4">
                        <label asp-for="Email" class="form-label" for="form3Example3">Email address: </label>
                        <input asp-for="Email" type="email" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Enter a valid email address" />
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label asp-for="Password" class="form-label" for="form3Example4">Password: </label>
                        <input asp-for="Password" type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Enter your password" />
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            
                             <a href=" @Url.Action("ForgetPass","Home")">Sign up</a>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href=" @Url.Action("ForgetPass","Home")">Forgot password?</a>
                        </div>
                    </div>

                    <div class="text-center mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="width: 100%;">
                            Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</body>
</html>

