        margin: 5px;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }
</style>



<div class="container">
    <h2 class="display-4">Major Report</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Student Name</th>
                <th>College</th>
                <th>Chossen Major</th>
                <th>Result</th>
                <th>%</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.StudentName</td>
                    <td>@obj.CollegeName</td>
                    <td>@obj.MajorChoosen</td>
                    <td>@obj.Result</td>
                    <td>@obj.Pre</td>
                    <td>@obj.Status</td>
                </tr>
            }
        </tbody>
    </table>

    @foreach (var obj in Model)
    {
        if (obj.Status == "pass")
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">CHOSEN MAJOR: @obj.MajorChoosen</h5>
                    <p class="card-text">Based on the student's answers, we recommend pursuing a major in @obj.MajorChoosen. Here are some details about the program:</p>
                    <div class="center">
                        <button id="showDetailsBtn" class="btn btn-primary" onclick="toggleDetails()">Show Details</button>
                    </div>
                    <div id="detailsSection" class="hidden">
                        <ul>
                            <li>Curriculum: A comprehensive program covering programming languages, algorithms, data structures, and software development.</li>
                            <li>Career Prospects: Exciting opportunities in software engineering, data analysis, artificial intelligence, and more.</li>
                            <li>Recommended Courses: Introduction to Programming, Data Structures, Algorithms, Database Management, Software Engineering.</li>
                        </ul>
                        <p class="card-text">The suggested major is determined based on the student's responses to our specialized questionnaire, and the match possibility indicates the likelihood of the major aligning with the student's interests and skills.</p>
                    </div>
                </div>
            </div>
        }
        else if (obj.Status == "fail")
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">CHOSEN MAJOR:</h5>
                    <p class="card-text">Based on the student's answers, we recommend not pursuing a major at this time. Please consult with an advisor for further guidance.</p>
                </div>
            </div>
        }
    }

    <div class="center">
        <div>
            <button class="btn btn-primary">Start new</button>
        </div>
        <div>
            <button class="btn btn-primary">Consult</button>
        </div>
    </div>
</div>

<script>
    function toggleDetails() {
        var detailsSection = document.getElementById("detailsSection");
        var showDetailsBtn = document.getElementById("showDetailsBtn");

        if (detailsSection.classList.contains("hidden")) {
            detailsSection.classList.remove("hidden");
            showDetailsBtn.innerText = "Hide Details";
        } else {
            detailsSection.classList.add("hidden");
            showDetailsBtn.innerText = "Show Details";
        }
    }
</script>