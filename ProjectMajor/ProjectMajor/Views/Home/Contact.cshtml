@{
    ViewData["Title"] = "Contact Page";
}
<header>
    <script src="https://kit.fontawesome.com/a78b0bf0a6.js" crossorigin="anonymous"></script>
</header>
<style>
    .btn {
        padding: 12px 24px;
        font-size: 20px;
        border-radius: 4px;
        cursor: pointer;
    }
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        margin: 5px;
    }
    .btn-primary:hover {
            background-color: #0069d9;
    }
</style>

<!--Section: Contact v.2-->
<section class="mb-4">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center display-4">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5 lead text-muted mb-6">
        Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.
    </p>

    <div class="row">
        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form action="https://formspree.io/f/xoqowdwq" method="POST">
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="name" class="lead text-muted">Your name:</label>
                            <input type="text" id="name" name="name" class="form-control">
                        </div>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <label for="email" class="lead text-muted">Your email:</label>
                            <input type="text" id="email" name="email" class="form-control">
                        </div>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <label for="subject" name="Subject" class="lead text-muted">Subject:</label>
                            <input type="text" id="Subject" name="Subject" class="form-control">

                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-md-12">
                        <div class="md-form">
                            <label for="message" class="lead text-muted">Your message:</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                        </div>
                    </div>
                </div>
                <!--Grid row-->
                <div class="text-center text-md-left">
                    <button type="submit" class="btn btn-primary" style="width: 20%;">Send</button>
                </div>
            </form>

            <div class="status"></div>
        </div>
        <!--Grid column-->
        <!--Grid column-->
        <div class="col-md-3 text-center">
            <ul class="list-unstyled mb-0">
                <li>
                    <i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>Al-Ahsa - King Faisal Universty</p>
                    <p>Deanship of Information Technology</p>
                </li>
                <li>
                    <i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+966539338100</p>
                </li>
                <li>
                    <i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>TeamProject@kfu.edu.sa</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->
    </div>
</section>
<!--Section: Contact v.2-->
